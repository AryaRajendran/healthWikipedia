  | work = Ecole Polytechnique Fédérale de Lausanne
  | publisher = eurekalert.org
  | date = 2007-12-17
  | url = http://www.eurekalert.org/pub_releases/2007-12/epfd-nmi121707.php
  | format = 
  | doi = 
