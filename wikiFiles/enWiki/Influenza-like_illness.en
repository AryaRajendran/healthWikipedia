| pages = 84–9
| year = 2008
| month = November
| pmid = 18761378
| doi = 10.1016/j.jviromet.2008.08.001
| url = http://linkinghub.elsevier.com/retrieve/pii/S0166-0934(08)00294-2
}}</ref>

